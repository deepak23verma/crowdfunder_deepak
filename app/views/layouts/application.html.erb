<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/shared/nav' %>

<div class="container container-downshift">
	<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
	<p><%= flash[:alert] %></p>
<% end %>
	<%#= render 'layouts/shared/flash' %>
	<%= yield %>
</div>

</body>
</html>
